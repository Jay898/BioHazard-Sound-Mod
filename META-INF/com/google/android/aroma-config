# Initialize
ini_set("rom_name","BioHazard Sound Mod");
ini_set("rom_version","SRC-K");
ini_set("rom_author","anandmore");
ini_set("rom_device","Any Device");
ini_set("rom_date","Jan, 29 2017");
ini_set("force_colorspace","rgba");
fontresload( "0", "ttf/Roboto-Regular.ttf;ttf/DroidSansFallback.ttf;", "12" );
fontresload( "1", "ttf/Roboto-Regular.ttf;ttf/DroidSansFallback.ttf;", "14" );
splash(2000, "splash");
theme("theme");

# Welcome
viewbox(
    "Welcome",
    "\nYou are about to Install <b>"+
	  ini_get("rom_name")+
	"</b> for <b>"+ini_get("rom_device")+"</b>.\n\n"+
    "\n\n\nBioHazard is an audio mod that utilizes different sound processing libs and drivers from various OEMs, combined all together, and the result is a very deep modification on how Android processes Audio.\n\n"+
      "  VERSION\t\t: <b><#selectbg_g>"+ini_get("rom_version")+"</#></b>\n"+
      "  CODENAME\t\t: <b><#selectbg_g>Kraken</#></b>\n"+
      "  UPDATED\t\t: <b><#selectbg_g>"+ini_get("rom_date")+"</#></b>\n\n\n"+
    "Press Next to Continue the Installation...",
    ""
);

# License
agreebox(
    "Terms and Conditions",
    "Please read carefully The BioHazard Sound Mod Terms and Conditions Below.",
    "",
    resread("license.txt"),
    "I Agree with this Terms and Conditions...",
    "You need to agree with the Terms and Conditions to proceed!"
);

# Changelog
textbox(
    "Changelog",
    "BioHazard Sound Mod Changelog",
    "",
    resread("changelog.txt")
);

# Menu
include("menu.edify");

# Installer
menubox(
  "\nBioHazard Sound Mod Installer",
  "<@center>\nReady to install\n\n</@>",
  "",
  "proceed.prop",
  "Install BioHazard Sound Mod","","@install",
  "Abort installation","","@trash"
);
if prop("proceed.prop","selected")=="2" then
  exit("");
endif;
setvar("retstatus",
install(
  "\nInstalling",
  "<@center>\nInstalling BioHazard Sound Mod...\nPlease wait...</@>",
  "")
);
ini_set("text_next", "Finish");
if getvar("retstatus")=="0" then
  viewbox(
  "\nInstallation Completed",
  "<@center>\nCongratulations!\n"+
  "BioHazard Sound Mod has been successfully installed\n\n\n</@>",
  ""
); else
viewbox("Installation Failed","\n\nInstaller Status: "+ getvar("retstatus"),"@warning");
endif;